<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/image_view_item_transform"
        android:layout_width="150dp"
        android:layout_height="205dp"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000000"
        tools:src="@tools:sample/avatars" />

<!--    <TextView-->
<!--        android:id="@+id/text_view_item_transform"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="8dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintStart_toEndOf="@id/image_view_item_transform"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        tools:text="This is item # xx" />-->

    <TextView
        android:id="@+id/text_view_item_transform"
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:textColor="#ffffff"
        android:background="#CC000000"
        android:ellipsize="end"
        android:padding="3dp"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintBottom_toBottomOf="@id/image_view_item_transform"
        tools:text="게임 제목" />

    <TextView
        android:id="@+id/text_view_localize"
        android:layout_width="40dp"
        android:layout_height="62dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="#CC000000"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"
        app:layout_constraintStart_toEndOf="@id/text_view_item_transform"
        app:layout_constraintBottom_toBottomOf="@id/image_view_item_transform"
        tools:text="음성\n자막" />

    <TextView
        android:id="@+id/text_view_game_pass_back"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:background="#CC000000"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"/>

    <TextView
        android:id="@+id/text_view_game_pass"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        tools:text="게임패스 신규" />

    <TextView
        android:id="@+id/text_view_game_pass_pc"
        android:layout_width="20dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_game_pass"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_game_pass_console"
        android:layout_width="20dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_game_pass_pc"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_game_pass_cloud"
        android:layout_width="20dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_game_pass_console"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_message"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:background="#CC000000"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintBottom_toTopOf="@id/text_view_game_pass_back"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"/>

</androidx.constraintlayout.widget.ConstraintLayout>