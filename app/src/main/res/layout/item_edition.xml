<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/image_view_item_edition"
        android:layout_width="150dp"
        android:layout_height="205dp"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:background="#000000"
        tools:src="@tools:sample/avatars" />

    <!--    <TextView-->
    <!--        android:id="@+id/text_view_item_edition"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_margin="8dp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toEndOf="@id/image_view_item_edition"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        tools:text="This is item # xx" />-->

    <TextView
        android:id="@+id/text_view_item_edition"
        android:layout_width="150dp"
        android:layout_height="62dp"
        android:textColor="#ffffff"
        android:background="#CC000000"
        android:ellipsize="end"
        android:padding="3dp"
        android:maxLines="3"
        android:layout_alignBottom="@id/image_view_item_edition"
        android:layout_alignStart="@id/image_view_item_edition"
        tools:text="게임 제목" />

    <TextView
        android:id="@+id/text_view_edition_game_pass_back"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:background="#CC000000"
        android:layout_above="@id/text_view_item_edition"
        android:layout_alignStart="@id/image_view_item_edition"/>

    <TextView
        android:id="@+id/text_view_edition_game_pass"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:layout_alignStart="@id/image_view_item_edition"
        android:layout_alignBottom="@id/text_view_edition_game_pass_back"
        tools:text="게임패스 신규" />

    <TextView
        android:id="@+id/text_view_edition_game_pass_pc"
        android:layout_width="20dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_toEndOf="@id/text_view_edition_game_pass"
        android:layout_alignBottom="@id/text_view_edition_game_pass_back"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_edition_game_pass_console"
        android:layout_width="20dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_toEndOf="@id/text_view_edition_game_pass_pc"
        android:layout_alignBottom="@id/text_view_edition_game_pass_back"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_edition_game_pass_cloud"
        android:layout_width="20dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_toEndOf="@id/text_view_edition_game_pass_console"
        android:layout_alignBottom="@id/text_view_edition_game_pass_back"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_edition_message"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:background="#CC000000"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignStart="@id/image_view_item_edition"
        android:layout_above="@id/text_view_edition_game_pass_back"/>

</RelativeLayout>