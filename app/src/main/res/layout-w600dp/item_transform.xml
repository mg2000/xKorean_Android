<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_item_transform"
        android:layout_width="@dimen/item_transform_image_length"
        android:layout_height="@dimen/item_transform_image_length"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_view_item_transform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintTop_toBottomOf="@id/image_view_item_transform"
        tools:text="This is item # xx" />

    <TextView
        android:id="@+id/text_view_localize"
        android:layout_width="35dp"
        android:layout_height="62dp"
        android:textColor="#ffffff"
        android:background="#CC000000"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"
        app:layout_constraintStart_toEndOf="@id/text_view_item_transform"
        app:layout_constraintBottom_toBottomOf="@id/image_view_item_transform"
        tools:text="This is item # xx" />

    <TextView
        android:id="@+id/text_view_game_pass_back"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:background="#CC000000"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"/>

    <TextView
        android:id="@+id/text_view_game_pass"
        android:layout_width="111dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/image_view_item_transform"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        tools:text="게임패스 신규" />

    <TextView
        android:id="@+id/text_view_game_pass_pc"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_game_pass"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_game_pass_console"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_game_pass_pc"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        tools:text="피" />

    <TextView
        android:id="@+id/text_view_game_pass_cloud"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_game_pass_console"
        app:layout_constraintBottom_toTopOf="@id/text_view_item_transform"
        app:layout_constraintEnd_toEndOf="@id/image_view_item_transform"
        tools:text="피" />
</androidx.constraintlayout.widget.ConstraintLayout>